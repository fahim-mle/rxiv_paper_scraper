# Environment Configuration for arXiv Scraper Project
# Copy this file to .env and update with your actual values

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=arxiv_scraper
MONGODB_USERNAME=arxiv_app
MONGODB_PASSWORD=your_secure_app_password
MONGODB_ADMIN_PASSWORD=your_secure_admin_password
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10
MONGODB_TIMEOUT_MS=30000
MONGODB_DATA_PATH=/mnt/data/mongodb/data
MONGODB_LOG_PATH=/mnt/data/mongodb/logs
MONGODB_AUTH_ENABLED=true

# Storage Configuration
STORAGE_BASE_PATH=/mnt/data/arxiv_papers
MAX_STORAGE_GB=300
PAPERS_SUBDIR=papers
BOOKS_SUBDIR=books
ARTICLES_SUBDIR=articles
TEMP_DIR=temp

# API Configuration
ARXIV_BASE_URL=http://export.arxiv.org/api/query
ARXIV_RATE_LIMIT_SECONDS=3.0
MAX_CONCURRENT_DOWNLOADS=5
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3
USER_AGENT=arXiv-Scraper/1.0 (Academic Research)

# Processing Configuration
BATCH_SIZE=100
MAX_WORKERS=4
ENABLE_TEXT_EXTRACTION=true
ENABLE_NLP_PREPROCESSING=false
LOG_LEVEL=INFO

# Agent Configuration
ENABLE_CRAWLER_AGENT=true
ENABLE_SCRAPER_AGENT=true
ENABLE_DOWNLOADER_AGENT=true
ENABLE_NLP_AGENT=false
ENABLE_MULTI_SOURCE_AGENT=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL_SECONDS=300
LOG_RETENTION_DAYS=30
METRICS_COLLECTION_ENABLED=true

# Development/Testing
DEBUG_MODE=false
TEST_MODE=false
MOCK_EXTERNAL_APIS=false